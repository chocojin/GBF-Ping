{
    "name": "GBF Result Ping",
    "version": "1.0",
    "description": "Notifies you when the raid is done, super simple.",
    "icons": {
        "48": "media/icon.png",
        "128": "media/icon.png"
    },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "media/off.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs"
    ]
}